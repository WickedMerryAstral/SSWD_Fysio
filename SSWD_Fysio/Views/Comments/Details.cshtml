@model SSWD_Fysio.Models.CommentViewModel

<partial name="_PractitionerBarPartialView" model="Model.practitionerBar"/>
<md-container>
    <h2>Comment @Model.comment.commentId</h2>
        <div>
            <label>Content:</label>
            @Html.DisplayFor(model => model.comment.content)
        </div>

        <div>
            <label>Visible to patient:</label>
            @Html.DisplayFor(model => model.comment.visible)
        </div>

        <div class="form-group">
            <a href="javascript: history.go(-1)">Back</a> |
            <a onclick="return confirm('Are you sure you want to remove this comment?');" 
                asp-controller="Comments" asp-action="Delete" asp-route-id="@Model.comment.commentId">Delete</a>
        </div>
</md-container>