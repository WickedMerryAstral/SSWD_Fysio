@model Core.Domain.Comment

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Comment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="commentId" />
            <div class="form-group">
                <label asp-for="practitionerId" class="control-label"></label>
                <input asp-for="practitionerId" class="form-control" />
                <span asp-validation-for="practitionerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="patientFileId" class="control-label"></label>
                <select asp-for="patientFileId" class="form-control" asp-items="ViewBag.patientFileId"></select>
                <span asp-validation-for="patientFileId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="postDate" class="control-label"></label>
                <input asp-for="postDate" class="form-control" />
                <span asp-validation-for="postDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="visible" /> @Html.DisplayNameFor(model => model.visible)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="content" class="control-label"></label>
                <input asp-for="content" class="form-control" />
                <span asp-validation-for="content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
