@model SSWD_Fysio.Models.IntakeViewModel

@{
    ViewData["Title"] = "Intake Patient";
}

<h1>Intake form</h1>

<hr />
<div class="column">
    <div class="col-md-4">
        <form asp-action="Create">
            <h2>Patient Details</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Name:</label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Email:</label>
                <input asp-for="mail" class="form-control" />
                <span asp-validation-for="mail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Phone:</label>
                <input asp-for="phone" class="form-control" />
                <span asp-validation-for="phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Birthdate:</label>
                <input asp-for="birthDate" class="form-control" />
                <span asp-validation-for="birthDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                 <label asp-for="chosenType" class="control-label">Are they a teacher or student?</label>
                 <select asp-for="chosenType" class ="form-control" asp-items="ViewBag.PatientTypeOptions">
                 </select>
                 <span asp-validation-for="chosenType" class="text-danger"></span>
            </div>
            <div class="form-group">
                 <label asp-for="chosenSex" class="control-label">Sex:</label>
                 <select asp-for="chosenSex" class ="form-control" asp-items="ViewBag.SexOptions">
                 </select>
                 <span asp-validation-for="chosenSex" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Student / Employee Number:</label>
                <input asp-for="number" class="form-control" />
                <span asp-validation-for="number" class="text-danger"></span>
            </div>

            <h2>Treatment</h2>
            <hr />
            <div class="form-group">
                 <label asp-for="chosenCode" class="control-label">Diagnosis:</label>
                 <select asp-for="chosenCode" class ="form-control" asp-items="ViewBag.DiagnosisOptions">
                 </select>
                 <span asp-validation-for="chosenCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                 <label asp-for="chosenMainPractitioner" class="control-label">Main practitioner:</label>
                 <select asp-for="chosenMainPractitioner" class ="form-control" asp-items="ViewBag.Practitioners">
                 </select>
                 <span asp-validation-for="chosenMainPractitioner" class="text-danger"></span>
            </div>
            <div class="form-group">
                 <label asp-for="chosenIntaker" class="control-label">Intake done by:</label>
                 <select asp-for="chosenIntaker" class ="form-control" asp-items="ViewBag.Practitioners">
                 </select>
                 <span asp-validation-for="chosenIntaker" class="text-danger"></span>
            </div>
            <div class="form-group">
                 <label class="control-label">Supervised under (Fill in yourself if this doesn't apply):</label>
                 <select asp-for="chosenSupervisor" class ="form-control" asp-items="ViewBag.Supervisors">
                 </select>
                 <span asp-validation-for="chosenSupervisor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Complaint:</label>
                <input asp-for="mainComplaint" class="form-control" />
                <span asp-validation-for="mainComplaint" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Weekly sessions:</label>
                <input asp-for="weeklySessions" class="form-control" />
                <span asp-validation-for="weeklySessions" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Session duration:</label>
                <input asp-for="sessionDuration" class="form-control" />
                <span asp-validation-for="sessionDuration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Discharge date:</label>
                <input asp-for="dischargeDate" class="form-control" />
                <span asp-validation-for="dischargeDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
